<%= form_for @flower, html: { multipart: true } do |f| %>
  <% if @flower.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@flower.errors.count, "error") %> prohibited this pet from being saved:
      </h2> 
      <ul>
        <% @flower.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.text_field :price, class: "form-control" %>
  </div>
  <div class="actions">
    <% if @flower.new_record? %>
      <%= f.submit 'Create', :class => 'btn btn-default' %>
    <% else %>
      <%= f.submit 'Update', :class => 'btn btn-default' %>
    <% end %>
    <%= link_to 'Back', flowers_path, class: "btn btn-default" %>
  </div>
<% end %>
